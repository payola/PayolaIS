@using Payola.Helpers;
@using Payola.Resources;
<?xml version="1.0"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
	    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta http-equiv="content-language" content="cs" />
        <meta name="robots" content="noindex, nofollow" />

	    <link href="@Url.Content("~/Content/css/reset.css")" rel="stylesheet" type="text/css" media="screen" />
	    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css" media="screen" />
	    <link href="@Url.Content("~/Content/css/2col.css")" rel="stylesheet" type="text/css" media="screen" />
	    <!--[if lte IE 6]>
            <link href="@Url.Content("~/Content/css/main-ie6.css")" rel="stylesheet" type="text/css" media="screen" />
        <![endif]-->
	    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" media="screen" />
	    <link href="@Url.Content("~/Content/custom.css?asset=201107140129")" rel="stylesheet" type="text/css" media="screen" />
        <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.8.13.custom.css")" rel="stylesheet" type="text/css" media="screen" />
        <link href="@Url.Content("~/Content/chosen/chosen.css")" rel="stylesheet" type="text/css" media="screen" />

        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.13.custom.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.elastic.source.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.datetimepicker.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.datepicker.localize.cs.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Modules/shared.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/Modules/Components/suggestor.js?asset=110616-1642")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/chosen.jquery.min.js")" type="text/javascript"></script>
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-437619-19']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>

        <title>@ViewBag.Title</title>
    </head>
    <body>
        <div class="page" id="main">
	        <div id="tray" class="box">
		        <div id="logo">
			        <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Content/logo-25px.png")" />
                    </a>
		        </div>
	        </div>
	        <hr class="noscreen" />

            <header id="menu">
                <nav>
                    <ul class="box">
                        <li>@Html.ActionLinkWithSpan(Resources.InformationPlural, "Index", "Information")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.IncidentPlural, "Index", "Incident")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.ReportPlural, "Index", "Report")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.PersonPlural, "Index", "Person")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.CompanyPlural, "Index", "Company")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.AddressPlural, "Index", "Address")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.VehiclePlural, "Index", "Vehicle")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.PhonePlural, "Index", "Phone")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.EmailPlural, "Index", "Email")</li>
                        <li>@Html.ActionLinkWithSpan(Resources.StbDivisionPlural, "Index", "StbDivision")</li>
                    </ul>
                </nav>
            </header>
	        <hr class="noscreen" />

            <section id="cols">
                <nav id="aside" class="aside @(!IsSectionDefined("SubMenu") ? "empty" : String.Empty)">
                    @if (IsSectionDefined("SubMenu"))
                    {
                        <ul id="submenu" class="box">
                            @RenderSection("SubMenu", false)
                        </ul>
                    }
                </nav>
		        <hr class="noscreen" />
		        <div id="content" class="box">
                    @RenderBody()
                </div>
            </section>
            <hr class="noscreen" />
            
            <footer id="footer">
                <p class="f-left">
                    &copy; 2011 <a href="#">MFF UK</a>, All Rights Reserved
                </p>
		        <p class="f-right">
                    Templates by <a href="http://www.adminizio.com/">Adminizio</a>, 
                    <a href="http://p.yusukekamiyamane.com">Icons</a>
                </p>
            </footer>
        </div>
    </body>
</html>
